{
  "manifest_version": 2,

  "name": "Gist Expander",
  "description": "Makes gist edit form bigger!",
  "version": "1.0.2",
  "icons": { "64": "g-square-64.png",
            "128": "g-square-128.png" },
  "browser_action": {
    "default_icon": "g-square-128.png"
  },
  "permissions": [
    "https://www.google-analytics.com/",
    "storage"
  ],
  "content_scripts": [
    { "matches": [
        "https://gist.github.com/*/*/edit",
        "https://gist.github.com/"
      ],
      "run_at": "document_end",
      "js": ["jquery-2.2.2.min.js", "google-analytics-bundle.js", "main.js"]
    }
  ]
}
